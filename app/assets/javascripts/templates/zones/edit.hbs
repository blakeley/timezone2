<h3>Edit timezone</h3>
<form {{action "editZone" on="submit"}}>
  <div class="form-group">
    <label for='name'>Name</label>
    {{view Ember.TextField value=model.name id="name" class="form-control"}}
  </div>

  <div class="form-group">
    <label for='city_name'>City Name</label>
    {{view Ember.TextField value=model.cityName id="cityName" class="form-control"}}
  </div>

  <div class="form-group">
    <label for='minutes_offset'>Difference (minutes)</label>
    {{view Ember.TextField value=model.minutesOffset id="minutesOffset" class="form-control"}}
  </div>

  {{input type="submit" class="btn btn-default" value="Update Zone" click="editZone"}}

</form>


